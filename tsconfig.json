{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // Environment Settings
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    
    // File Layout and Output (CRITICAL FIXES)
    "outDir": "./dist", // Output compiled JS files to the 'dist' folder
    "rootDir": "./src", // Source files are located in the 'src' folder
    "forceConsistentCasingInFileNames": true,

    // Node.js Recommended
    "lib": ["ES2020"], 
    "types": ["node"], // Include Node.js types
    
    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options (Recommended to keep)
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    
    // Module Safety
    "moduleDetection": "force",
    "skipLibCheck": true,
    
    // ðŸ’¥ FIX for TS5096: Must be removed when generating output files.
    // "allowImportingTsExtensions" : true, 
    
    // Removed as not applicable to Node.js backend
    // "jsx": "react-jsx" 
  },
  "include": ["src/**/*"] // Ensure all files in src are included
}
